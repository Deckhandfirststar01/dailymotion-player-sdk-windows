<Page
    x:Class="DMVideoPlayer_Sample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dmVideoPlayer="using:DMVideoPlayer"
    xmlns:local="using:DMVideoPlayer_Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Button Click="PlayButtonBase_OnClick" Content="Play" />
        <Button Click="PauseButtonBase_OnClick" Content="Pause" />
        <Button Click="mute_click" Content="Mute" />
        <Button Click="Setting1ButtonBase_OnClick" Content="load player setting 1" />
        <Button Click="Setting2ButtonBase_OnClick" Content="load player  no controls" />

        <Grid
            x:Name="MyRootGrid"
            Width="450"
            Height="350"
            Background="Red" />
    </StackPanel>
</Page>
